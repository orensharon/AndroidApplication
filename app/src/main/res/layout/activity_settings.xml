<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_settings"
    style="@style/body"
    android:padding="16dp"
    tools:context="com.example.orensharon.finalproject.gui.settings.SettingsActivity">

    <!-- Network status row -->
    <RelativeLayout
        style="@style/activity_row">

        <TextView
            android:id="@+id/text_view_system_status_title"
            style="@style/row_title"
            android:text="Network status:" />

        <TextView
            style="@style/row_value"
            android:text="Online"
            android:textColor="@color/online"/>
    </RelativeLayout>

    <!-- Backup switch row -->
    <RelativeLayout
        android:id="@+id/text_view_enable_backup_title"
        style="@style/activity_row">

        <TextView
            style="@style/row_title"
            android:text="Enable backup:" />

        <Switch
            style="@style/row_value"
            android:id="@+id/switch_enable_service"/>
    </RelativeLayout>

    <!-- List of contents to backup layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Text description before the list -->
        <TextView
            style="@style/text_item_small"
            android:text="Please select the content that you would like to backup:"/>

        <!-- List of contents -->
        <ListView
            style="@style/list_view"
            android:id="@+id/content_list_view" >
        </ListView>
    </LinearLayout>



</LinearLayout>
